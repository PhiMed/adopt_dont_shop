<%= form_with url: '/applications', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name%><br>
  <%= form.label :street_address %>
  <%= form.text_field :street_address, required: true %><br>
  <%= form.label :city %>
  <%= form.text_field :city, required: true %><br>
  <%= form.label :state %>
  <%= form.text_field :state, required: true %><br>
  <%= form.label :zip_code %>
  <%= form.text_field :zip_code, required: true %><br>
  <%= hidden_field_tag :application_status, 'In Progress' %>
  <%= form.submit "Submit" %>
<% end %>
